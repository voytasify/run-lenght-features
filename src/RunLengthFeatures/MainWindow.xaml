<Window x:Class="RunLengthFeatures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunLengthFeatures"
        mc:Ignorable="d"
		Background="Black"
        Title="Run Length Features" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<Grid Grid.Row="0" 
			  Margin="10">
			<Image Source="http://cdn1-www.craveonline.com/assets/uploads/gallery/google-earthview/google-earth-view-6233.jpg"/>
			<Rectangle Fill="Aqua" 
					Width="100" 
					Height="100"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"/>
		</Grid>

		<Grid Grid.Row="1"
			  Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
			<TextBlock Grid.Column="0"
					   Text="wykres1"
					   Foreground="AliceBlue"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"/>

			<TextBlock Grid.Column="1"
					   Text="wykres2"
					   Foreground="AliceBlue"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"/>
		</Grid>
		
		<Grid Grid.Row="2"
			  Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
			<TextBlock Grid.Column="0"
					   Text="statysyka 1"
					   Foreground="AliceBlue"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"/>
			<TextBlock Grid.Column="1"
					   Text="statysyka 2"
					   Foreground="AliceBlue"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"/>
			<TextBlock Grid.Column="2"
					   Text="statysyka 3"
					   Foreground="AliceBlue"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"/>
			<TextBlock Grid.Column="3"
					   Text="statysyka 4"
					   Foreground="AliceBlue"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"/>
		</Grid>
    </Grid>
</Window>
